<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Width="600" Height="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ToggleButton Grid.Column="0" Grid.Row="0">CPU 01</ToggleButton>
        <ToggleButton Grid.Column="1" Grid.Row="0">CPU 02</ToggleButton>
        <ToggleButton Grid.Column="2" Grid.Row="0">CPU 03</ToggleButton>
        <ToggleButton Grid.Column="3" Grid.Row="0">CPU 04</ToggleButton>
        <ToggleButton Grid.Column="4" Grid.Row="0">CPU 05</ToggleButton>
        <ToggleButton Grid.Column="5" Grid.Row="0">CPU 06</ToggleButton>
    </Grid>
</Window>
